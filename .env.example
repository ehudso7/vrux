# Core Configuration
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# AI API Keys
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# ViewComfy Integration
VIEWCOMFY_API_URL=https://api.viewcomfy.com/infer
VIEWCOMFY_CLIENT_ID=your-viewcomfy-client-id
VIEWCOMFY_CLIENT_SECRET=your-viewcomfy-client-secret

# Deployment Services
VERCEL_TOKEN=your-vercel-token
VERCEL_API_URL=https://api.vercel.com/v13/deployments
NETLIFY_TOKEN=your-netlify-token
NETLIFY_API_URL=https://api.netlify.com/api/v1
GITHUB_TOKEN=your-github-token

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/vrux_db
# For production, use a connection pool:
# DATABASE_URL=postgresql://user:password@host:5432/vrux_db?pgbouncer=true&connection_limit=1

# Security
JWT_SECRET=your-secure-jwt-secret-here
SESSION_SECRET=your-secure-session-secret-here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=10
MAX_GENERATION_TIME_MS=30000
MAX_TOKENS=2000

# Feature Flags
NEXT_PUBLIC_ENABLE_VIEWCOMFY=false
NEXT_PUBLIC_ENABLE_CACHE=true
NEXT_PUBLIC_ENABLE_QUALITY_CHECKS=true

# Payments (Stripe)
STRIPE_SECRET_KEY=your-stripe-secret-key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Testing
TEST_URL=http://localhost:3000