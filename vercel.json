{
  "framework": "nextjs",
  "build": {
    "env": {
      "NODE_OPTIONS": "--max-old-space-size=8192",
      "NEXT_TELEMETRY_DISABLED": "1"
    }
  },
  "functions": {
    "pages/api/**/*.ts": {
      "maxDuration": 300,
      "memory": 3008
    },
    "pages/api/generate-*.ts": {
      "maxDuration": 300,
      "memory": 3008
    },
    "pages/api/ws/*.ts": {
      "maxDuration": 300,
      "memory": 3008
    }
  },
  "regions": ["iad1"],
  "trailingSlash": false,
  "cleanUrls": true,
  "rewrites": [
    {
      "source": "/api/health",
      "destination": "/api/health-check"
    }
  ]
}